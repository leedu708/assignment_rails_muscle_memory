<h1>New Article</h1>

<form action=<%= articles_path %> method="post">

  <h3>Article Title</h3>
  <input type="text" name="article[title]">

  <h3>Article Text</h3>
  <p><textarea name="article[body]" rows="4" cols="75"></textarea></p>

  <p><input type="submit" value="Submit Article"></p>

  <input type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

</form>